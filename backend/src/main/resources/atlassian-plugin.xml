<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <resource type="i18n" name="i18n" location="hr-portal-plugin"/>

    <!-- Component imports for required services -->
    <component-import key="templateRenderer" interface="com.atlassian.templaterenderer.TemplateRenderer"/>
    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>

    <web-resource key="hr-portal-resources" name="HR Portal Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="hr-portal.css" location="/frontend/hr-portal.css"/>
        <resource type="download" name="hr-portal.js" location="/frontend/hr-portal.js"/>
        <resource type="download" name="switch-logo.png" location="/frontend/switch-logo.png"/>
        <context>hr-portal</context>
    </web-resource>

    <servlet key="hr-portal-servlet" class="com.switchhr.jsm.servlet.HRPortalServlet">
        <description key="hr-portal.servlet.description">HR Portal Servlet</description>
        <url-pattern>/hr-portal</url-pattern>
    </servlet>

    <servlet key="portal-settings-servlet" class="com.switchhr.jsm.servlet.PortalSettingsServlet">
        <description>Portal Settings Servlet</description>
        <url-pattern>/portal-settings</url-pattern>
    </servlet>

    <web-item key="portal-settings-web-item" section="com.atlassian.jira.jira-project-config-plugin:project-config-nav-links" weight="900">
        <label>Portal Settings</label>
        <link>/plugins/servlet/portal-settings?projectKey=${project.key}</link>
        <context-provider class="com.atlassian.jira.plugin.webfragment.contextproviders.ProjectContextProvider" />
    </web-item>
</atlassian-plugin>
